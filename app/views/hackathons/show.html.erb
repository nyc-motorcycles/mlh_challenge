<% content_for :page_header do "#{@hackathon.name}" end %>
<% content_for :page_sub_header do "#{@hackathon.date.strftime("%b %e at %l:%M %p")}" end %>

<%= image_tag "http://lorempixel.com/200/200/city/" %>
<h1><em><%= @hackathon.location %></em> on <%= @hackathon.date.strftime("%b %e at %l:%M %p") %></h1>

<h2>Participants</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Name</th>
      <th>Email</th>
      <th>Referrer</th>
    </tr>
  </thead>
  <tbody>
    <% @hackathon.users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%= link_to user.referrer.name, user.referrer if user.referrer %></td>
      </tr>
    <% end %>
  </tbody>
</table>
